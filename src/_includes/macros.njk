{% macro postListItem(post) %}
<article class="post-list-item">
  <div class="post-content">
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p>{{ post.data.description }}</p>
    <footer>
      <time datetime="{{ post.date | dateFormat }}">{{ post.date | dateFormat }}</time>
    </footer>
  </div>
  {% if post.data.image.url %}
  <a href="{{ post.url }}">
    {% if post.data.image.url.startsWith("http") %}
    <img src="{{ post.data.image.url }}" alt="{{ post.data.image.alt }}" eleventy:ignore>
    {% elif post.data.image.url.startsWith("/") %}
    <img src="{{ post.data.image.url }}" alt="{{ post.data.image.alt }}">
    {% else %}
    <img src="{{ post.url | url }}{{ post.data.image.url }}" alt="{{ post.data.image.alt }}">
    {% endif %}
  </a>
  {% endif %}
</article>
{% endmacro %}