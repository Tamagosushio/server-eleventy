---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
permalink: /tags/{{ tag }}/
layout: "base.njk"
---

<h1>Tagged with “{{ tag }}”</h1>

{%- for post in collections[tag] | reverse %}
<article>
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <p>{{ post.data.description }}</p>
  <footer>
    <time datetime="{{ post.date | dateFormat }}">{{ post.date | dateFormat }}</time>
  </footer>
</article>
{%- endfor %}